# Solana Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet # Use 'devnet' for testing, 'mainnet-beta' for production
NEXT_PUBLIC_OWNER_WALLET=
NEXT_PUBLIC_DEV_WALLET=
NEXT_PUBLIC_SOLANA_RPC_ENDPOINT= # Optional: Custom RPC endpoint for better performance

# IPFS/Pinata Configuration (for metadata uploads)
PINATA_JWT=YOUR_PINATA_JWT_HERE
PINATA_GATEWAY=YOUR_PINATA_GATEWAY_URL # e.g., https://gateway.pinata.cloud

# Supabase Configuration (for shipping/order database)
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_PROJECT_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Email Configuration (optional - for shipping notifications)
RESEND_API_KEY=YOUR_RESEND_API_KEY
NOTIFICATION_EMAIL=your-email@example.com
